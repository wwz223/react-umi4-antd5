{
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "printWidth": 300,
  "trailingComma": "es5",
  "arrowParens": "always",
  "jsxBracketSameLine": false,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "printWidth": 300
      }
    },
    {
      "files": "*.*sx",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf"
      }
    },
    {
      "files": ["*{s,S}chema.{ts,js}"],
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve",
        "trailingComma": "none"
      }
    }
  ]
}
